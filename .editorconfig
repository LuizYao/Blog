# top-most EditorConfig file
root = true

[*]
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{toml,js,html}]
indent_style = space
indent_size = 2
